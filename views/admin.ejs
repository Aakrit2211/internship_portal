<%- include('partials/header', { title: 'Admin Panel' }) %>

<div class="container mt-5">
  <div class="text-center mb-4">
    <h2 class="fw-bold">Registered Applicants</h2>
    <p class="text-muted">List of people who applied for internship/volunteering</p>
  </div>

  <div class="table-responsive rounded shadow-sm">
    <table class="table table-dark table-hover table-bordered align-middle">
      <thead class="table-secondary text-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Full Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">College</th>
          <th scope="col">Why Join?</th>
        </tr>
      </thead>
      <tbody>
        <% if (applicants.length > 0) { %>
          <% applicants.forEach((app, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= app.name %></td>
              <td><%= app.email %></td>
              <td><%= app.phone %></td>
              <td><%= app.college %></td>
              <td><%= app.reason %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center text-muted">No applicants yet</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('partials/footer') %>
